# Redis (for token caching and deduplication)
REDIS_URL=redis://default:password@host:port

# Turvo API Configuration (Motus Freight)
TURVO_BASE_URL=https://publicapi.turvo.com/v1
TURVO_API_KEY=your_api_key_here
TURVO_USERNAME=your_username_here
TURVO_PASSWORD=your_password_here
TURVO_CLIENT_ID=publicapi
TURVO_CLIENT_SECRET=secret

# HappyRobot Webhook
MOTUS_IN_TRANSIT_WEBHOOK_URL=https://workflows.platform.happyrobot.ai/hooks/YOUR_WEBHOOK_ID

# API Security (Required for /sync-in-transit endpoint)
API_SECRET_KEY=your_secret_key_here

# In-Transit Configuration
# Window 1: Check-in call (3-4 hours before delivery)
CALL_WINDOW_1_MIN=3
CALL_WINDOW_1_MAX=4
# Window 2: Final call (0-30 minutes before delivery)
CALL_WINDOW_2_MIN=0
CALL_WINDOW_2_MAX=0.5
REDIS_TTL_DAYS=2

# Owner Filtering (Optional - Controls which shipments to call based on owner)
# Leave empty to allow ALL owners
# Option 1: Filter by owner names (comma-separated)
# ALLOWED_OWNERS=Cameron Murray,Justin Kinnett
# Option 2: Filter by owner IDs (more reliable, comma-separated)
# ALLOWED_OWNER_IDS=201288,5564
ALLOWED_OWNERS=
ALLOWED_OWNER_IDS=
